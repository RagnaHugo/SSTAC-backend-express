{
  "name": "sstac-backend",
  "version": "1.0.0",
  "description": "Backend para SSTAC - Sistema de Seguimiento de Tareas y An√°lisis de Carga",
  "main": "src/app.js",
  "scripts": {
    "start": "cross-env NODE_ENV=production node src/app.js",
    "dev": "cross-env NODE_ENV=development nodemon src/app.js",
    "setup": "node scripts/setup.js",
    "migrate": "knex migrate:latest --knexfile src/config/knexfile.js",
    "migrate:rollback": "knex migrate:rollback --knexfile src/config/knexfile.js",
    "migrate:reset": "knex migrate:rollback --all --knexfile src/config/knexfile.js && npm run migrate",
    "seed": "knex seed:run --knexfile src/config/knexfile.js",
    "db:reset": "npm run migrate:reset && npm run seed",
    "test": "NODE_ENV=testing jest",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix"
  },
  "keywords": [
    "sstac",
    "devdatep",
    "nodejs",
    "express",
    "kanban",
    "analytics"
  ],
  "author": "Hugo Miguel Gallardo <hugo.gallardo3@unmsm.edu.pe>",
  "license": "MIT",
  "dependencies": {
    "bcrypt": "^5.1.1",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "knex": "^3.0.1",
    "morgan": "^1.10.0",
    "pg": "^8.16.3",
    "sqlite3": "^5.1.6"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "eslint": "^8.55.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
}
